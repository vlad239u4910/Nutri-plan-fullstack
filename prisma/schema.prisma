// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  password    String
  meal        Meal[]
  role        Role
  createdAt   DateTime @default(now())
  updatetedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}

model Food {
  id              Int               @id @default(autoincrement())
  name            String            @unique
  calories        Float?
  protein         Float?
  fat             Float?
  carbohydrates   Float?
  fiber           Float?
  sugar           Float?
  createdAt       DateTime          @default(now())
  updatetedAt     DateTime          @updatedAt
  category        Category?         @relation(fields: [categoryId], references: [id])
  categoryId      Int?
  foodServingUnit FoodServingUnit[]
  meal            Meal?             @relation(fields: [mealId], references: [id])
  mealId          Int?
  mealFood        MealFood[]
}

model Category {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  foods       Food[]
  createdAt   DateTime @default(now())
  updatetedAt DateTime @updatedAt
}

model ServingUnit {
  id   Int    @id @default(autoincrement())
  name String @unique

  createdAt       DateTime          @default(now())
  updatetedAt     DateTime          @updatedAt
  foodServingUnit FoodServingUnit[]
  mealFoods       MealFood[]
}

model FoodServingUnit {
  id            Int         @id @default(autoincrement())
  food          Food        @relation(fields: [foodId], references: [id])
  foodId        Int
  servingUnit   ServingUnit @relation(fields: [servingUnitId], references: [id])
  servingUnitId Int
  grams         Float?
  createdAt     DateTime    @default(now())
  updatetedAt   DateTime    @updatedAt
}

model Meal {
  id          Int        @id @default(autoincrement())
  dateTime    DateTime
  foods       Food[]
  user        User       @relation(fields: [userId], references: [id])
  userId      Int
  createdAt   DateTime   @default(now())
  updatetedAt DateTime   @updatedAt
  mealFood    MealFood[]
}

model MealFood {
  id            Int         @id @default(autoincrement())
  food          Food        @relation(fields: [foodId], references: [id])
  foodId        Int
  meal          Meal        @relation(fields: [mealId], references: [id])
  mealId        Int
  servingUnitId Int
  servingUnit   ServingUnit @relation(fields: [servingUnitId], references: [id])
  amount        Float?
  createdAt     DateTime    @default(now())
  updatetedAt   DateTime    @updatedAt
}
